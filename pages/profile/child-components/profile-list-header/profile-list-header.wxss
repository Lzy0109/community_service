/* pages/profile/child-components/profile-list-header/profile-list-header.wxss */
.profile-list-header {
  width: 750rpx;
  height: 300rpx;
  margin-bottom: 40rpx;
  background-color: white;
  border-style: 6px solid #f5f5f5;
  padding: 20rpx 0 0 0;
}

.profile-avatar {
  border: 1px solid gray;
  overflow: hidden;
  border-radius: 60%;
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
}

.profile-avatar image {
  width: 100%;
  height: 100%;
}

.profile-name {
  color: #353535;
  margin-top: 20rpx;
  text-align: center;
  font-weight: 700;
  font-size: 21px;
}
