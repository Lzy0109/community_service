/* pages/modifyPwd/update/update.wxss */
.update-box {
  background-color: white;
  border-bottom: 1px solid #f7f7f7;
  font-size: 17px;
  padding: 16px 20px;
  display: flex;
  align-items: center;
}
.update-box-label {
  padding-right: 16px;
  width: 85px;
}
.update-box-input {
  flex: 1;
}
.input-tick {
  width: 40rpx;
  height: 40rpx;
}
.input-tick image{
  width: 100%;
  height: 100%;
}
button {
  margin-top: 20px;
}